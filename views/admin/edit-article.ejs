<!DOCTYPE html>
<html>
<head>
    <title>Edit Article</title>
</head>
<body>
    <h1>Edit Article</h1>
    <form action="/admin/article/edit/<%= article.id %>" method="POST">
        <div>
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" value="<%= article.title %>" required>
        </div>
        <div>
            <label for="content">Content:</label>
            <textarea id="content" name="content" required><%= article.content %></textarea>
        </div>
        <div>
            <label for="publishDate">Publication Date:</label>
            <input type="datetime-local" id="publishDate" name="publishDate" 
                   value="<%= article.publishDate.toISOString().slice(0, 16) %>" required>
        </div>
        <button type="submit">Update Article</button>
    </form>
    <a href="/admin/dashboard">Back to Dashboard</a>
</body>
</html>